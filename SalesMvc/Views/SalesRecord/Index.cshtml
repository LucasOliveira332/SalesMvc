@model SalesMvc.Models.ViewModels.SalesViewModel
@{
    ViewData["Title"] = "Sales";
}


<div>
    <h2>Sales</h2>
    <a class="btn btn-success" asp-action="Create">Create</a>
    <form asp-action="Index">
           <label class="control-label form" asp-for="InitialDate" ></label>
           <input class="form-control form" asp-for="InitialDate" />
           <label class="control-label form" asp-for="FinalDate" ></label>
           <input class="form-control form" asp-for="FinalDate" />
           <input class="btn btn-light mt-2 form" type="submit" value="Enviar"/>
    </form>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x=> x.Sale.Date)</th>
                <th>@Html.DisplayNameFor(x=> x.Sale.Amount)</th>
                <th>@Html.DisplayNameFor(x=> x.Sale.Status)</th>
                <th>@Html.DisplayNameFor(x=> x.Sale.Seller.Name)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Sales)
            {
                <tr>
                    <td>@Html.DisplayFor(x=> item.Date.Date)</td>
                    <td>@Html.DisplayFor(x=> item.Amount)</td>
                    <td>@Html.DisplayFor(x=> item.Status)</td>
                    <td>@Html.DisplayFor(x=> item.Seller.Name)</td>
                    <td>
                        <a class="btn btn-danger" asp-action="Remove" asp-all-route-id="@item.Id">Remove</a>
                        <a class="btn btn-light" asp-action="Alter" asp-all-route-id="@item.Id">Alter</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
