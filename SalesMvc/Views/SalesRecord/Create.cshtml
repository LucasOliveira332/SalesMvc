@model SalesMvc.Models.ViewModels.SalesViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Sale.Date" class="control-label"></label>
                <input asp-for="Sale.Date" class="form-control" />
                 <label asp-for="Sale.Amount" class="control-label"></label>
                <input asp-for="Sale.Amount" class="form-control" />
                <label asp-for="Sale.Status" class="control-label"></label>
                <input asp-for="Sale.Status" class="form-control" /> 
            </div>
            <div class="form-group">
                <label asp-for="Sale.Seller.Id" class="control-label"></label>
                <select asp-for="Sale.Seller.Id" asp-items="@(new SelectList(Model.Sellers,"Id", "Name"))" class="form-control"></select>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-primary"/>
                 <a class="btn btn-light " asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>